<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:text="Washer/Dryer"
        android:textSize="30sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:id="@+id/title" />

    <GridLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:columnCount="2"
        android:rowCount="6"
        android:id="@+id/grid"
        android:orientation="horizontal"

        android:padding="15dp">
        <TextView
            android:text="Wash Cycle: "
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:id="@+id/current_temperature_title_text_view" />
        <TextView
            android:text=""
            android:textColor="@android:color/holo_red_dark"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:id="@+id/washer_time_remaining_text_view" />


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Start wash cycle"
            android:id="@+id/start_washer_button"/>


    </GridLayout>

</LinearLayout>